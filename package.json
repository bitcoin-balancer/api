    "bignumber-utils": "^1.0.1",
    "body-parser": "^2.0.0-beta.2",
    "cors": "^2.8.5",
    "error-message-utils": "^1.1.0",
    "express": "^5.0.0-beta.3",
    "express-rate-limit": "^7.3.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.12.0",
